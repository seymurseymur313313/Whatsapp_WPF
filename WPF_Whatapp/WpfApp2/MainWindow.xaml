                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Path Data="M0,100 L50,0 L100,100 Z" Fill="GreenYellow" Stroke="Blue" StrokeThickness="2"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Rectangle Margin="10,10,226,326">
            <Rectangle.Fill>
                <ImageBrush ImageSource="https://photo333.com/circlecropphoto.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="semdullu xala" HorizontalAlignment="Left" Margin="59,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.272,0.219" FontSize="20" Foreground="Black" FontFamily="Bahnschrift"/>

